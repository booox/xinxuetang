<%= simple_form_for [:teacher, @task] do |f| %>
	<div class="group"><%= f.input :name %></div>
	<div class="group"><%= f.input :content %></div>
	<div class="group"><%= f.input :post_id, as: :hidden, input_html: { value: params[:post_id]} %></div>

	<%= f.submit "Submit", data: {disable_with: "Submitting..."} %>

<% end %>
